<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp5"
    android:paddingLeft="@dimen/dp10"
    android:paddingRight="@dimen/dp10"
    android:paddingTop="@dimen/dp5">

    <com.yoyiyi.soleil.widget.CircleImageView
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/dp68"
        android:layout_height="@dimen/dp68"
        android:src="@drawable/bili_default_avatar"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp6"
        app:layout_constraintBottom_toBottomOf="@id/iv_avatar"
        app:layout_constraintStart_toEndOf="@id/iv_avatar"
        app:layout_constraintTop_toTopOf="@id/iv_avatar"
        >

        <TextView
            android:id="@+id/tv_uname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="ssss"
            android:textColor="@color/black_80"
            android:textSize="@dimen/text_size_16"/>

        <TextView
            android:id="@+id/tv_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp6"
            android:minWidth="@dimen/dp120"
            android:text="ssss"
            android:textColor="@color/black_alpha_30"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintTop_toBottomOf="@+id/tv_uname"/>

        <TextView
            android:id="@+id/tv_videos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp6"
            android:text="ssss"
            android:textColor="@color/black_alpha_30"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintStart_toEndOf="@id/tv_fans"
            app:layout_constraintTop_toBottomOf="@+id/tv_uname"/>

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="ssss"
            android:textColor="@color/black_alpha_30"
            android:textSize="@dimen/text_size_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_fans"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>